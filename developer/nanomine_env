# Change the default passwords BEFORE configuring mongo
# Save the file in ~nanomine directory as ~nanomine/nanomine_prod_env
#                                      yes, for now  ^^^^^^^
# chmod 660 ~nanomine/nanomine_prod_env  # set read/write for user and group, others no access
# source ~nanomine/nanomine_prod_env to load the variables if needed. The runserver script will do this itself.
export NM_HOME=~nanomine
export NM_SERVER_DIR=$NM_HOME/nanomine
export NM_PROD_USER="MGIUSER"
export NM_PROD_PWD="MGIPWD"
