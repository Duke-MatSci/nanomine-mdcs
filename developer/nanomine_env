export NM_MONGO_USER="MONGOADMINUSER"
export NM_MONGO_PWD="MONGOADMINPWD"
export NM_PROD_DJANGO_SECRET_KEY="secretkey"
export NM_EMAIL_HOST="EMAILHOST"
export NM_EMAIL_PORT="25"
